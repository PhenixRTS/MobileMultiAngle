<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_stream_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/primaryDarkColor"
        android:foreground="@drawable/bg_surface"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_stream_list">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <SurfaceView
            android:id="@+id/main_stream_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/main_surface_mask"
            android:alpha="0"
            android:background="@color/primaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_stream_list"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor"
        android:visibility="invisible"
        tools:itemCount="4"
        tools:listitem="@layout/row_member_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_stream_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/replay_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_replay_button"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_stream_list"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/replay_button_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_replay_30"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/replay_button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_replay"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
